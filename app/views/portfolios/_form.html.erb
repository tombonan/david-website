<div class = "blog-form-container">
<%= form_for @image, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <% if @image.image? %>
  <% else %>
	  <p>
	    <%= f.file_field :image %>
	  </p>
  <% end %>

  <p>
    <%= f.label :category %><br />
    <%= f.select :category, ['None', 'For Sale', 'Freelance']%>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>

  <p><%= f.submit "Update"%></p>
<% end %>
</div>